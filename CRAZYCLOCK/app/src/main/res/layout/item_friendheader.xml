<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/default_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/portraitImageView"
        android:layout_toRightOf="@+id/portraitImageView"
        android:layout_toEndOf="@+id/portraitImageView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/nickNameTextView"
        android:textSize="18sp" />

    <TextView
        android:text="@string/default_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/phoneNumTextView"
        android:layout_alignBaseline="@+id/nickNameTextView"
        android:layout_alignBottom="@+id/nickNameTextView"
        android:layout_toRightOf="@+id/nickNameTextView"
        android:layout_toEndOf="@+id/nickNameTextView"
        android:textSize="18sp" />

    <TextView
        android:text="@string/default_signiture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signatureTextView"
        android:layout_below="@+id/nickNameTextView"
        android:layout_alignLeft="@+id/nickNameTextView"
        android:layout_alignStart="@+id/nickNameTextView" />

    <ImageView
        android:id="@+id/portraitImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_portrait" />
</RelativeLayout>